<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div id="bg">
       <img src="http://cdn.playbuzz.com/cdn/ca39901a-b069-4455-8e48-6dec38d2deae/d97e9092-f95f-4b45-a66d-c8429e294e76.jpg" alt="">
     </div>
      <h1>Please sign up</h1>
      <% if flash[:errors] && !flash[:errors].empty? %>
        Please refer to the following errors below:
        <ul id='errors'>
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <section>
        <form action='/users' method='post'>
          <h2>Please sign up</h2>
          <div class="form-group">
            <label for='email'>
              Email: <input class='form-control' name='email' type='email' value='<%= @user.email %>' required>
            </label>
          </div>
          <div class="form-group">
            <label for='password'>
              Password: <input class='form-control' name='password' type='password'>
            </label>
          </div>
          <div class="form-group">
            <label for='password_confirmation'>
              Password Confirmation: <input class='form-control' name='password_confirmation' type='password'>
            </label>
          </div>
          <input class="btn btn-danger" type='submit' value='Sign up'>
        </form>
      </section>
    </div>
    <div class="col-lg-8" style="height:auto;width:auto;">
      &nbsp;
    </div>
  </div>
</div>
